<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PPDBClosedActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="333dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pendaftaran_siswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="PENDAFTARAN SISWA"
        android:textColor="#2D314C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30sp"
        android:paddingRight="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintBottom_toTopOf="@+id/tanggal_lahir_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_medium"
            android:text="Nama"
            android:textColor="#2D314C"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/nama_field"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_rectangle"
            android:width="315sp"
            android:paddingLeft="6dp"
            android:height="50sp"/>

        <TextView
            android:id="@+id/nik"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_medium"
            android:text="NIK"
            android:textColor="#2D314C"
            android:textSize="16sp"
            android:layout_marginTop="13dp"/>

        <EditText
            android:id="@+id/nik_field"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_rectangle"
            android:width="315sp"
            android:paddingLeft="6dp"
            android:height="50sp"/>

        <TextView
            android:id="@+id/jenis_kelamin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_medium"
            android:text="Jenis Kelamin"
            android:textColor="#2D314C"
            android:textSize="16sp"
            android:layout_marginTop="13dp"/>

        <RadioGroup
            android:id="@+id/gender_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_button_laki_laki"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:fontFamily="@font/poppins"
                android:text="Laki-laki" />

            <RadioButton
                android:id="@+id/radio_button_perempuan"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:fontFamily="@font/poppins"
                android:text="Perempuan" />
        </RadioGroup>

        <TextView
            android:layout_marginTop="13dp"
            android:id="@+id/tempat_lahir"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_medium"
            android:text="Tempat Lahir"
            android:textColor="#2D314C"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tempat_lahir_field"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="6dp"
            android:background="@drawable/rounded_rectangle"
            android:width="315sp"
            android:height="50sp"/>

        <TextView
            android:id="@+id/tanggal_lahir"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_medium"
            android:text="Tanggal Lahir"
            android:textColor="#2D314C"
            android:textSize="16sp"
            android:layout_marginTop="13dp"/>

        <EditText
            android:id="@+id/tanggal_lahir_edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="none"
            android:background="@drawable/rounded_rectangle"
            android:textSize="14sp"
            android:paddingLeft="6dp"
            android:fontFamily="@font/poppins"
            android:hint="Pilih Tanggal Lahir"
            android:textColorHint="#A3A6B9"
            android:clickable="true"
            android:focusable="false"/>

        <TextView
            android:id="@+id/agama"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_medium"
            android:text="Agama"
            android:textColor="#2D314C"
            android:textSize="16sp"
            android:layout_marginTop="13dp"/>

        <Spinner
            android:id="@+id/spinner_agama"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_rectangle"
            android:paddingLeft="6dp"
            android:fontFamily="@font/poppins"
            android:textColor="#A3A6B9"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Gambar"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#2D314C"
            android:layout_marginTop="13dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*note: upload gambar berupa kartu keluarga"
            android:textSize="10sp"
            android:gravity="center"/>



    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
